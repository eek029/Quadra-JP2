# Database Configuration
# Option 1: Local Postgres (Uncomment 'db' service in docker-compose)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/quadra

# Option 2: Supabase (Copy from Project Settings -> Database -> Connection string (URI))
# Remember to use port 6543 for transaction pooler if available, or 5432 for session.
# Ensure sslmode=require is present if connecting to Supabase.
DATABASE_URL=postgresql+psycopg2://[USER]:[PASSWORD]@[HOST]:[PORT]/[DBNAME]?sslmode=require

# Postgres Local Credentials (only if using local db)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=quadra

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=changeme_please_use_a_secure_random_string
JWT_EXPIRES_IN=3600
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Notification (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
